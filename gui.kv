#:import utils kivy.utils
#:import Factory kivy.factory.Factory

<Button>
    font_size:32
    size_hint: (0.5, 0.5)
    pos_hint: {"center_x": 0.5, "center_y": 0.5}

<ImportText>
    title: "Import text file"
    size_hint: 0.70, 0.70
    pos_hint: {"x": 0.15, "top": 0.85}
    BoxLayout:
        select_text: select_text
        text_chooser: text_chooser
        orientation: "vertical"
        spacing: 8

        Label:
            text: "The imported file must be a text file"
            size_hint: (1, .2)
        FileChooserListView:
            id: text_chooser
            filters: ["*.txt"]
            size_hint: (1, .7)
        Button:
            id: select_text
            size_hint: (1, .2)
            text: "SELECT"
            on_release: root.load(text_chooser.selection)
            disabled: True if text_chooser.selection==[] else False

<TextInput>
    background_color: utils.get_color_from_hex("#d2d4c8")
    pos_hint: {"center_x": 0.5}

<Label>
    bold: True

<MyLayout>
    id:main_layout
    original:original
    tagger: tagger
    tags_wrapper: tags_wrapper

    Accordion:
        orientation: "vertical"
        size: root.width, root.height
        spacing: 8
        padding: 8

        AccordionItem:
            title: "Options"

        AccordionItem:
            title: "Application"
            BoxLayout:
                orientation: "vertical"
                spacing: 8
                padding: 8

                Image:
                    id:icon
                    source: "bot_simple.png"
                    allow_stretch: False
                    keep_ratio: True
                    size_hint:(1, 0.2)

                BoxLayout:
                    orientation: "horizontal"
                    BoxLayout:
                        orientation: "vertical"
                        spacing: 4
                        TextInput:
                            id:original
                            multiline:True
                            size_hint: (1, .75)
                            padding: 8
                            foreground_color: (95/255, 116/255, 112/255, 1)
                            hint_text: "Enter a sentence and click Generate Button to auto generate grammar"
                            hint_text_color: (95/255, 116/255, 112/255, 0.6)
                        BoxLayout:
                            orientation: "vertical"
                            size_hint: (1, .25)
                            Label:
                                text: "or import a text file for analysis"
                                background_color: (0, 0, 0,0)
                                canvas.before:
                                    Color:
                                        rgba: self.background_color
                                    Rectangle:
                                        size: self.size
                                        pos: self.pos
                                color: (136, 150, 150, 1)
                            Button:
                                id: import_text
                                text:"Import"
                                font_size: 16
                                size_hint: (0.24, 0.67)
                                background_color: utils.get_color_from_hex("#5F7470")
                                color: (224/255, 226/255, 219/255,1)
                                on_release: root.open_popup()
                    ScrollView:
                        id: tags_wrapper
                        Label:
                            id: tagger
                            text: "Tagged text will be shown here"
                            text_size: root.tags_wrapper.width, None
                            size: self.texture_size
                            valign: "middle"
                            halign: "center"
                            background_color: (0, 0, 0,0)
                            canvas.before:
                                Color:
                                    rgba: self.background_color
                                Rectangle:
                                    size: self.size
                                    pos: self.pos
                            color: (136, 150, 150, 1)
